<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.xtek.chatlite.ActivityOnlineUserList">

    <ImageView
        android:id="@+id/usricon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        />

    <EditText
        android:id="@+id/et_input_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/usricon"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/et_input_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_input_email"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:hint="Username"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="L O G I N"
        android:textSize="18sp"
        android:layout_marginTop="45dp"
        android:textStyle="bold"
        android:onClick="onLoginButtonClick"
        android:layout_below="@+id/et_input_name"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/btn_login"
        android:layout_alignEnd="@+id/et_input_name"
        android:onClick="onRegisterButtonClick"/>
</RelativeLayout>
